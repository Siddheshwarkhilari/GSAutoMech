{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",       // assuming your source is in src/
    "module": "ESNext",
    "target": "ES2020",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true
  },
  "include": ["src/**/*"]
}

